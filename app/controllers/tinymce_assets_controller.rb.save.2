class TinymceAssetsController < ApplicationController
  respond_to :json

  def create
    image    = Image.create(file: params[:file])
    render json: {
      image: {
     url:    image.file.url
#         url:  URI.join(request.protocol, request.host_with_port, image.file.url)

      }
    }, layout: false, content_type: "text/html"
  end

end

