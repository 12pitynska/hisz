<%= form_for @article,  html: { multipart: true } do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>Artykuł nie został dodany z powodu <%= @article.errors.count %> <% if @article.errors.count == 1 %> błędu. <% else %> błędów. <% end %> </h2>

      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group ">
  <div class="field">
    <%= f.label "Tytuł" %><br>
    <%= f.text_field :title , class: "form-control" %>
  </div>
    <div class="field">
    <%= f.label "Obrazek" %><br>
    <%= f.file_field :image  %>
  </div>
  <div class="field">
    <%= f.label :Treść %><br>
    <%= f.text_area :body, class: "tinymce", :rows => 20, :cols => 120 %>
  </div>
 <div class="field">
    <%= f.label 'Poziom' %><br>
    <%= collection_select(:article, :level_id, Level.all, :id, :name, {prompt: "Wybierz z listy"},  class: "form-control" )%>
  </div>
  

  

  <div class="actions">
    <%= f.submit  "Zapisz" ,  class: "btn btn-default"  %>
  </div>
</div>
<% end %>


