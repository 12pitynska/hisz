<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta charset="utf-8">
		<title>Hiszpański online</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	
	</head>
	<body>
    <!--Top navigation starts -->
    <nav class="navbar navbar-fixed-top">  
        <div class="container">
          <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="glyphicon glyphicon-chevron-down"></span>
          </a>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">  
              <li id='logo'><%= link_to "HISZPAŃSKI ONLINE", root_path %></li>
   
              <li><a href="#">SŁOWNICTWO</a></li>
              <li><%= link_to "GRAMATYKA", theories_path %></li>
              <li><%= link_to "ARTYKUŁY", articles_path %></li>
              <li><%= link_to "ĆWICZENIA", surveys_path %></li>
    		      <li><%= link_to "BAZA LINKÓW", links_path %></li>
            </ul>
            <ul class="nav navbar-right navbar-nav" id="menuicons">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle " data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
                <ul class="dropdown-menu" style="padding:12px;">
                    <form class="form-inline">
                       <div class="input-group">
                         <input type="text" class="form-control" placeholder="Search">
                         <div class="input-group-btn">
         			       <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                         </div>
                       </div>
                    </form>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <i class="glyphicon glyphicon-chevron-down"></i></a>
                <ul class="dropdown-menu">                

            			<% if user_signed_in? %>
            			  <li><%= link_to "Wyloguj się", destroy_user_session_path, :method => :delete %></li>
                    <li><%= link_to "Edytuj swój profil", edit_user_registration_path %></li>
                  <% else %>	
                    <li><%= link_to "Zarejestruj się", new_user_registration_path %></li>
              	  	<li><%= link_to "Zaloguj się", new_user_session_path %></li>
                  <% end %>

                  <li class="divider"></li>
                  <li><a href="#">O projekcie</a></li>
                </ul>
              </li>  
            </ul>
          </div>		
        </div>
    </nav> 
    <!-- Top navigation ends -->

    <!-- Header image & category title -->
    <header class="masthead">
      <div class="container">
        <div class="row">
          <div class="col col-sm-12" id="headtext">

            <h1 class="cattitle">   
              <%= yield :cattitle %>   <!-- title --> 
            </h1>
            <p class="catdes"> 
              <%= yield :catdes %>     <!-- subpage/category description -->
            </p>
             
          </div>
        </div>
      </div>     
    </header>

    <!-- Page Body starts-->
    <div class="container">
    	<div class="row">

        <!-- Right menu-->
      	<div class="col col-sm-2">
         	<div id="sidebar">  		

            <%= yield :rightmenu %> 
     
          </div>
    		</div>  
          		
        <!-- Page content-->
        <div class="col col-sm-10">
          <div class="panel">    

            <!-- Alert-->
            <% flash.each do |name, msg| %>
          				<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
          	<% end %>

            <!-- Load content-->
            <%= yield %>

          </div>
        </div> 
      </div>
    </div>

    <!-- Footer-->
    <footer class="footer "> O PROJEKCIE REGULAMIN KONTAKT  </footer>  

    <!-- js script references -->
        <%= javascript_include_tag "application" %>
    		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    		<script src="/assets/application.js"></script>  


  </body>
</html>

<%= tinymce :content_css => asset_path('application.css')%>