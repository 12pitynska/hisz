  <tr>
    <th>id</th>
    <th>Tytuł</th>
    <th>Akcje</th>

  </tr>
  <% @approved.each do |link| %>
  <tr>
    <td><%= link.id %></td>
    <td><%= link_to link.title, link %> <br><i> @<%= link.user.login %> </i> </td>

    <td><%= link.status%></td>
    <td><%= link_to 'Pokaż', link_path(link) %> <br>  <%= link_to 'Edytuj', edit_link_path(link) %> <br>
