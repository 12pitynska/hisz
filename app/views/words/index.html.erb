<p id="notice"><%= notice %></p>

<h1>Lista słówek</h1>

<table>
  <thead>
    <tr>
      <th>Polski</th>
      <th>Hiszpański</th>
      <th>Opis</th>
       <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.polish %></td>
        <td><%= word.spanish %></td>
        <td><%= word.description %></td>
          <td><%= word.vocabulary_id %></td>
   
    <td><%= link_to 'Pokaz', word %></td>
        <td><%= link_to 'Edytuj', edit_word_path(word) %></td>
      
   <td><%= link_to 'Usuń', @word, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

